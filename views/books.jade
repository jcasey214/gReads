extends layout

block content
  section
  #list
    each book in books
      div(class="bookSummary")
        img(src=book.cover_url alt=book.title)
        h1= book.title
        h2 By 
        each author in book.authorObjects
          a(href="/authors/" + author.id)
            h2 #{author.first_name} #{author.last_name}
        h3= book.genre
        p= book.description
        a(href="/books/" + book.id + "/delete") Delete
        a(href="/books/" + book.id + "/edit") Edit
    a(href="/books/new") Add a new book
