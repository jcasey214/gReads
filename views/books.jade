extends ./nav.jade

block content
  section
  #list
    form(class="genre-select" action="/books" method="POST")
      label(for="genre")
      select(id="genre" name="genre")
        option(value="All" autofocus) All
        option(value="Javascript") Javascript
        option(value="Python") Python
      button(type="submit") Filter
    each book in books
      div(class="bookSummary")
        img(src=book.cover_url alt=book.title)
        div
          div(class="book-header")
            h1= book.title
            div
              a(href="/books/" + book.id + "/delete") Delete
              a(href="/books/" + book.id + "/edit") Edit
          h2 By 
          each author in book.authorObjects
            a(href="/authors/" + author.id)
              h3 #{author.first_name} #{author.last_name} 
          h4= book.genre
          p= book.description
    a(href="/books/new" class="add-book") Add a new book
