extends layout

block content
  section
    form(action="/authors/" + author.id + "/edit" method="POST")
      label(for="first_name") First Name
      input(type="text" name="first_name" id="first_name" value=author.first_name)
      label(for="last_name") Last Name
      input(type="text" id="last_name" name="last_name" value=author.last_name)
      label(for="bio") Bio
      input(type="text" name="bio" id="bio" value=author.bio)
      label(for="portrait_url") Portrait URL
      input(type="text" name="portrait_url" id="portrait_url" value=author.portrait_url)
      button(type="submit") Edit Author
